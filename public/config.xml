<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gieseckedevrient.wallet" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="pre-load" value="true" />
    <preference name="keep-running-in-background" value="true" />
    <preference name="pre-load-priority" value="500" />
    <preference name="KeyboardResizeMode" value="native" />


    <name>GD Wallet</name>
    <description>
        GD Wallet widget.
    </description>
    <author>
        Giesecke &amp; Devrient Mobile Security
    </author>
    <content src="index.html" />

    <feature name="widgetapi">
        <param name="android-package" value="com.gieseckedevrient.convego.widgetapis.WidgetApi" />
    </feature>

    <feature name="GoogleMaps">
        <param name="android-package" value="plugin.google.maps.GoogleMaps" />
    </feature>

    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>

    <feature name="Keyboard">
        <param name="android-package" value="io.ionic.keyboard.IonicKeyboard" />
        <param name="onload" value="true" />
    </feature>

    <feature name="WidgetPreferences" >
        <param name="android-package" value="com.gieseckedevrient.convego.widgetpreferences.WidgetPreferences"/>
        <param name="onload" value="true" />
    </feature>

</widget>
